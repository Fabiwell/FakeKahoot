<Window x:Class="FakeKahoot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeKahoot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF3F2E2E">
    <Grid>
        <ContentControl x:Name="UserControlContainer"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" Text="Login to Play" VerticalAlignment="Top" FontSize="18" Foreground="#FFD6D6D6"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,32,0,0" TextWrapping="Wrap" Text="Welcome to Fake kahoot!" VerticalAlignment="Top" FontSize="22" Foreground="#FFD6D6D6"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,152,0,0" VerticalAlignment="Top" Width="139" Height="24" Background="#FF675A5A" Foreground="#FFD7D6D6" Click="btnlogin_Click"/>

    </Grid>
</Window>
